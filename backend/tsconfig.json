{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["types/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
   "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
